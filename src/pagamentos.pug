extends includes/layout-coluna-logado.pug

mixin txtPagamento(tit, subtit)
    strong.pag-text
        = tit
        span= subtit

block colunaDireita
    .block-pagamento
        .box-pagamento
            .row-pag
                +txtPagamento('Plano:', 'Leão de Aço/Válido por 12 meses')
                a(href="#").tit-pagamento Escolher outro plano
            .row-pag
                +txtPagamento('Valor do plano:', 'R$ 838,80')
            .row-pag
                +txtPagamento('Dependentes:', '3')
                +txtPagamento('Valor por dependentes:', 'R$ 19,90')
        
        .box-pagamento
            .row-pag.row-pag--destq
                strong.tit-pagamento Meio de pagamento

